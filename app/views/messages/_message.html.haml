.message
  .talkerInfo
    .talkerInfo__userName
      = message.user.name
    .talkerInfo__postedTime
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lowerMessage
    - if message.content.present?
      %p.lowerMessage__content
        = message.content
    = image_tag message.image.url, class: 'lowerMessage__image' if message.image.present?
